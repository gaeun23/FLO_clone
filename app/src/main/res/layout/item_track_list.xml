<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_track_song_cover_iv"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_track_song_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:text="SWIPE"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/item_track_song_cover_iv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_track_song_singer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:includeFontPadding="false"
        android:text="@string/singer_itzy"
        android:textColor="@color/flo_gray_9d9d"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/item_track_song_title_tv"
        app:layout_constraintTop_toBottomOf="@id/item_track_song_title_tv" />

    <ImageView
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/btn_player_play"
        app:layout_constraintBottom_toBottomOf="@id/item_track_song_cover_iv"
        app:layout_constraintEnd_toStartOf="@id/item_track_btn_more_iv"
        app:layout_constraintTop_toTopOf="@id/item_track_song_cover_iv" />

    <ImageView
        android:id="@+id/item_track_btn_more_iv"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/btn_player_more"
        app:layout_constraintBottom_toBottomOf="@id/item_track_song_cover_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_track_song_cover_iv" />
</androidx.constraintlayout.widget.ConstraintLayout>