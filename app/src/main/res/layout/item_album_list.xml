<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_album_cover_iv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/item_album_cover_iv"
        app:layout_constraintStart_toEndOf="@id/item_album_cover_iv"
        app:layout_constraintTop_toTopOf="@id/item_album_cover_iv">

        <TextView
            android:id="@+id/item_album_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxWidth="260dp"
            android:maxLines="1"
            android:text="어떻게 이별까지 사랑하겠어, 널 사랑하는 거ㅇㅇㅇㅇ지"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/item_album_song_singer_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:includeFontPadding="false"
            android:text="@string/singer_itzy"
            android:textColor="@color/flo_gray_9d9d"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_album_song_info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:includeFontPadding="false"
            android:text="@string/singer_itzy"
            android:textColor="@color/flo_gray_7878"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/item_album_btn_play_iv"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/btn_player_play"
        app:layout_constraintBottom_toBottomOf="@id/item_album_cover_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_album_cover_iv" />
</androidx.constraintlayout.widget.ConstraintLayout>